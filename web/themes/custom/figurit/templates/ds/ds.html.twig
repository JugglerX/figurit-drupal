{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 * - layout.template
 * - node.nid.value
 * - content['#view_mode']
 * - content['#bundle']
 */
#}

{% set contextual_region = (attributes.class[0] == 'contextual-region') %}
{% set nid = 'node-' ~ node.nid.value %}

{%
set add_classes = [
    'node',
    'node-' ~ node.bundle|clean_class,
    content['#view_mode'] ? 'node-' ~ content['#view_mode']|clean_class,
    node.isPromoted() ? 'node-promoted',
    node.isSticky() ? 'node-sticky',
    not node.isPublished() ? 'node-unpublished',
    layout.template ? layout.template,
    contextual_region ? 'contextual-region',
  ]
%}

{%
set remove_classes = [
    contextual_region ? 'contextual-region',
    'node--type-' ~ node.bundle|clean_class,
    content['#view_mode'] ? 'node--view-mode-' ~ content['#view_mode']|clean_class,
  ]
%}

{#{{ dump(layout.template) }}#}
{#{{ dump(node.nid.value) }}#}
{#{{ dump(node.view_mode) }}#}
{#{{ dump(content['#view_mode']) }}#}
{#{{ dump(content['#bundle']) }}#}
{#{{ dump(attributes.class) }}#}

<{{ outer_wrapper }} id={{ nid }} {{ attributes.removeClass(remove_classes).addClass(add_classes, extra_classes) |without('role','about','typeof','content','data-history-node-id') }} >
{% block child %}
{% endblock %}
</{{ outer_wrapper }}>

